<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">
<style>
    body {
        /*background-image: url('https://img.freepik.com/premium-vector/businessman-go-yellow-cab-taxi-driver-wait-passenger_543062-3269.jpg?w=2000');*/
        background-image: url('https://taxistars.net/en/res/img/footer.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: -15px 220px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-sm-3" style="width:500px; margin-top:100px; margin-left:240px;">
            <h1 class="text-center">Register</h1>
            <form method="post">
                
                <div>
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" id="firstName" class="form-control" placeholder="John">
                </div>
                <div>
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" id="lastName" class="form-control" placeholder="Doe">
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="someone@example.com">
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control">
                </div>
                <div>
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control">
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    {{#if message}}
                    <p class="text-danger">{{message}}</p>
                    {{/if}}
                </div>

            </form>
        </div>
    </div>
</div>