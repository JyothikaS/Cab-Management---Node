<div class="container" style="">
    <div class="m-4">
        <form method="post"><br><br>
            <br>

            <h1 style="text-align:center;">Registration</h1><br>
            <h2>Driver Details</h2>
            <div class="row mb-3">
                <label for="dname" class="col-sm-2 col-form-label">Driver Name</label>
                <div class="col-sm-10">
                    <input type="text" name="dname" id="dname" class="form-control" placeholder="Driver Name">
                </div>
            </div>
            <div class="row mb-3">
                <label for="dcontact" class="col-sm-2 col-form-label">Driver Contact</label>
                <div class="col-sm-10">
                    <input type="text" name="dcontact" id="dcontact" class="form-control" placeholder="Driver Contact" max="10">
                </div>
            </div>
            <div class="row mb-3">
                <label for="demail" class="col-sm-2 col-form-label">Driver Email</label>
                <div class="col-sm-10">
                    <input type="text" name="demail" id="demail" class="form-control" placeholder="Driver Email">
                </div>
            </div>
            <div class="row mb-3">
                <label for="dlicense" class="col-sm-2 col-form-label">Driver License Number</label>
                <div class="col-sm-10">
                    <input type="text" name="dlicense" id="dlicense" class="form-control"
                        placeholder="Driver license Number">
                </div>
            </div>
            {{!-- .. --}}

            <h2>Cab Details</h2>
            <div class="row mb-3">
                <label for="cname" class="col-sm-2 col-form-label">Cab Name</label>
                <div class="col-sm-10">
                    <input type="text" name="cname" id="cname" class="form-control" placeholder="Cab Name">
                </div>
            </div>

            <div class="row mb-3">
                <label for="cmodel" class="col-sm-2 col-form-label">Cab Model</label>
                <div class="col-sm-10">
                    <input type="text" name="cmodel" id="cmodel" class="form-control" placeholder="Cab model">
                </div>
            </div>
            <div class="row mb-3">
                <label for="license_plate" class="col-sm-2 col-form-label">Cab License </label>
                <div class="col-sm-10">
                    <input type="text" name="license_plate" id="license_plate" class="form-control"
                        placeholder="Cab Number plate">
                </div>
            </div>
            <div class="row mb-3">
                <label for="myear" class="col-sm-2 col-form-label">Manufacture Year</label>
                <div class="col-sm-10">
                    <input type="date" name="myear" id="myear" class="form-control" placeholder="Year of Manufacture ">
                </div>
            </div>

            <div class="row mb-3">
                <label for="capacity" class="col-sm-2 col-form-label">Cab Capacity</label>
                <div class="col-sm-10">
                    <input type="number" name="capacity" id="capacity" class="form-control" placeholder=" Capacity">
                </div>
            </div>
            <div class="row mb-3">
                <label for="password" class="col-sm-2 col-form-label">Set Password</label>
                <div class="col-sm-10">
                    <input type="text" name="password" id="password" class="form-control" placeholder="Password">
                </div>
            </div>

            <div class="row mb-3">
                <label for="status" class="col-sm-2 col-form-label">Status</label>
                <div class="col-sm-10">
                    <select class="form-select" name="status" aria-label="Default select example">
                        <option selected>Choose status</option>
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-10 offset-sm-2">
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
