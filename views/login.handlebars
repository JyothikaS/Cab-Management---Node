<div class="container">
    <div class="row">
        <div class="col-sm-6 offset-sm-3" style="width:500px; margin-top:100px; margin-left:270px;">
            <h1 class="text-center">Login</h1><br>
            <form method="post">
                <div>
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="someone@example.com">
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control">
                </div>
                <div class="d-grid mt-4">
                   <button type="submit" class="btn btn-primary">SignIn</button>
                   <p style="font-size:20px; padding-left:100px;"> Not a User - <a href="/register" style="text-decoration:none; font-weight:bolder; color:navy; margin-top:20px;"> Register Now</a></p>
                    {{#if message}}
                    <p class="text-danger">{{message}}</p>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
</div>